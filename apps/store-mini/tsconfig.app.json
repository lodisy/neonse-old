{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "rootDir": "src",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["DOM", "ES2015"]
    },
    "include": ["src/**/*", "typings/**/*"],
    "exclude": ["**/*.spec.ts", "**/*.spec.tsx"]
}
