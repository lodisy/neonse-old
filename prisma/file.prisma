// 文件

model File {
    id           String   @id @default(cuid())
    name         String
    alt          String?
    title        String?
    caption      String?
    format       FileType
    mimeType     String
    size         Bytes
    width        Int?
    height       Int?
    source       Source?  @relation(fields: [sourceId], references: [id]) // a file has its source
    sourceId     String?  @unique
    autoPlay     Boolean?
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
    customFields Json?
}

// -----

enum FileType {
    // image
    IMAGE
    // video
    VIDEO
    // sound
    SOUND
    // other
    BINARY
}

model Source {
    id   String @id @default(cuid())
    File File[]
}
