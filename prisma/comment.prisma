// 评论（匿名）

model Comment {
    id        String   @id @default(cuid())
    name      String
    email     String
    by        Profile? @relation(fields: [profileId], references: [id]) // 已注册用户
    profileId String?  @unique
    content   String
}

model Profile {
    id       String    @id @default(cuid())
    comments Comment[]
}
