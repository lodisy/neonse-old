model Address {
    id           String   @id @default(cuid())
    fullname     String
    email        String?
    /// @Validator.IsMobilePhone()
    phone        String?
    company      String?
    streetLine1  String
    streetLine2  String?
    district     String? // for 大陆
    city         String
    state        String?
    postalCode   String?
    country      String
    default      Boolean? @default(true) // 是否作为默认地址
    customFields Json? // 例如经纬度作为地图显示等
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
}
