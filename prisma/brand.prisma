// 品牌

model Brand {
    id           String             @id @default(cuid())
    name         String
    slug         String             @unique
    founders     Profile[] // many to many
    country      String?
    year         Int?
    description  String?
    products     Product[] // many to many
    languageCode LanguageCode
    translations BrandTranslation[]
}

model BrandTranslation {
    id           String       @id @default(cuid())
    languageCode LanguageCode
    name         String
    country      String?
    description  String?
    brand        Brand?       @relation(fields: [brandId], references: [id])
    brandId      String?
}

// ---------

model Product {
    id     String  @id @default(cuid())
    brands Brand[]
}

model Profile {
    id     String  @id @default(cuid())
    brands Brand[]
}

enum LanguageCode {
    zh_Hans
    zh_Hant
    en
    de
}
